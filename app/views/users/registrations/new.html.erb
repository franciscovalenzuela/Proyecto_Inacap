<% title "Registro de usuarios" %>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="authform">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form', :class => 'new_user formuser' }) do |f| %>
          <div class="text-center"><h2>REGISTRAR USUARIO</h2></div>
          <%= devise_error_messages! %>
          <hr style="margin-bottom: 30px; border-color: rgb(235, 235, 235);">
          <div class="form-horizontal" role="form">
            <div class="form-group">
              <%= f.label :name, 'Username', :class => "col-md-2 control-label" %>
              <div class="col-md-9">
                <%= f.text_field :name, class: 'form-control', :required => true %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :email, 'E-mail', :class => "col-md-2 control-label" %>
              <div class="col-md-9">
                <%= f.email_field :email, class: 'form-control', :required => true%>
              </div>
            </div>
            <div class="form-group">
               <%= f.label :password, 'Contraseña', :class => "col-md-2 control-label" %>
              <div class="col-md-9">
                 <%= f.password_field :password, class: 'form-control', :required => true%>
              </div>
            </div>
            <div class="form-group">
               <%= f.label :password_confirmation, 'Confirmar contraseña', :class => "col-md-2 control-label" %>
              <div class="col-md-9">
                <%= f.password_field :password_confirmation, class: 'form-control c_password', :required => true %>
              </div>
            </div>
            <div class="form-group">
              <div class="btn btn-primary cargarimg"> 
                <span> + Subir Foto </span>
                  <%= f.file_field :avatar, class:'file textupload'%>
              </div>        
              <div id="prev_imagenes">
                <div id="prev_user_avatar">
                </div>
              </div>
            </div>

            <div class="form-group text-right" id="from-btn-registro">
              <%= f.submit 'Registrar', :class => 'btn btn-success' %> 
            </div>
        <% end -%>
      </div>
    </div>
  </div>
</div>
