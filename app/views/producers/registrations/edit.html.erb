<% title "Editar cuenta" %>

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2" id="globo-standar-producers">
      <div class="text-center" id="heading-account"><h2>Edita tu Cuenta</h2></div>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :role => 'form', :class => 'form-horizontal'}) do |f| %>
       <%= devise_error_messages! %>
       <div class="form-edit">
        <div class="form-group">
           <%= f.label "Nombre", :class => 'col-md-4 control-label' %>
           <div class="col-md-8">
             <%= f.text_field :name, class: 'form-control' %>
           </div>           
         </div>
        <div class="form-group">
          <%= f.label :email, :class => 'col-md-4 control-label' %>
          <div class="col-md-8">
            <%= f.email_field :email, class: 'form-control' %>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
          </div>    
        </div>
        <div class="form-group">
           <%= f.label "Telefono", :class => 'col-md-4 control-label' %>
           <div class="col-md-5">
             <%= f.text_field :phone, class: 'form-control' %>
           </div>           
        </div>
        <div class="form-group">
           <%= f.label "Dirección", :class => 'col-md-4 control-label'%>
           <div class="col-md-8">
             <%= f.text_field :adress, class: 'form-control' %>
           </div>          
        </div>
        <div class="form-group">
          <%= f.label :city, 'Ciudad', class: 'col-md-4 control-label' %>
          <div class="col-md-6">
            <%= collection_select(:producer, :city_id, City.order("name asc").all, :id, :name, {:prompt => "-- seleccione --", :selected => @producer.city_id}, {class: "form-control"}) %> 
          </div>       
        </div>
        <div class="form-group">
          <%= f.label :api_key, 'ApiKey*', class: 'col-md-4 control-label' %>
          <div class="col-md-8">
            <%= f.text_field :api_key, :autofocus => true, class: 'form-control' %>
          </div>          
        </div>
        <div class="form-group">
          <%= f.label :merchant_id, 'MerchantId*', class: 'col-md-4 control-label' %>
          <div class="col-md-8">
            <%= f.text_field :merchant_id, :autofocus => true, class: 'form-control' %>
          </div>          
        </div>
        <div class="form-group">
          <%= f.label :account_id, 'AccountId*', class: 'col-md-4 control-label' %>
          <div class="col-md-8">
            <%= f.text_field :account_id, :autofocus => true, class: 'form-control' %>
          </div>         
        </div>
        <div class="form-group">
          <%= f.label "Cambiar Avatar", class: 'col-md-4 control-label' %>
          <div class="col-md-8">
            <div id="e-avatar-p", class="btn btn-primary cargarimg"> 
              <span>Avatar</span>
                <%= f.file_field :avatar, class:'file textupload'%>        
            </div>
            <div id="prev_imagenes">
              <div id="prev_producer_avatar"></div>
            </div>
          </div>
        </div>        
       </div>
       <div class="text-center" id="heading-account"><h2>Cambia tu Contraseña</h2></div>
       <div class="form-edit">
          <fieldset>
            <div class="form-group">
              <%= f.label "Contraseña Nueva", class: 'col-md-4 control-label' %>
              <div class="col-md-8">
                <%= f.password_field :password, :autocomplete => 'off', class: 'form-control' %>
                <p>* Deja este campo en blanco si no quieres cambiar tu contraseña.</p>
              </div>              
            </div>
            <div class="form-group">
              <%= f.label "Confirmación de contraseña", class: 'col-md-4 control-label' %>
              <div class="col-md-8">
                <%= f.password_field :password_confirmation, class: 'form-control' %>
                <p>* Introduce nuevamente tu contraseña</p>
              </div>              
            </div>
          </fieldset>
          <fieldset>
            <div class="form-group">
              <%= f.label "Contraseña atual", class: 'col-md-4 control-label' %>
              <div class="col-md-8">
                 <%= f.password_field :current_password, class: 'form-control' %>
                 <p>* Debes ingresar tu contraseña actual para realizar tu cambio de contraseña.</p>
              </div>             
            </div>
          </fieldset>
          <div class="form-group text-right">
            <%= f.submit '+ Guardar Cambios', :class => 'btn btn-success', :id => 'btn-p-edit' %>
          </div>  
          <% end -%>      
       </div>
      <div class="text-center" id="div-cancelar">
        <h2>¿ Quieres Cancelar tu Cuenta ?</h2>
        <%= button_to "Cancelar mi cuenta", registration_path(resource_name), :data => { :confirm => "¿Estas seguro?" }, :method => :delete, :class => 'btn btn-danger', :id => 'btn-cancelar' %>
      </div>       
    </div>
  </div>
</div>
