<% title "Registro productora" %>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3" >
      <div class="authform">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form', :class => 'new_producer formproducer'}) do |f| %>
        <div class="text-center"><h2>REGISTRAR PRODUCTOR</h2></div>
          <%= devise_error_messages! %>
          <hr style="margin-bottom: 30px; border-color: rgb(235, 235, 235);">
          <div class="form-horizontal" role="form">
            <div class="form-group">
              <%= f.label :rut, 'RUT', :class => "col-md-3 control-label" %>
              <div class="col-md-8">
                <%= f.text_field :rut, :autofocus => true, class: 'form-control', :required => true %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :name, 'Nombre', :class => "col-md-3 control-label" %>
              <div class="col-md-8">
                <%= f.text_field :name, :autofocus => true, class: 'form-control', :required => true %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :phone, 'Telefono', :class => "col-md-3 control-label" %>
              <div class="col-md-8">
                <%= f.text_field :phone, :autofocus => true, class: 'form-control', :required => true %>
              </div>
            </div>
            <div class="form-group">
               <%= f.label :adress, 'Dirección', :class => "col-md-3 control-label" %>
               <div class="col-md-8">
                 <%= f.text_field :adress, :autofocus => true, class: 'form-control', :required => true %>
               </div>
            </div>
            <div class="form-group">
              <%= f.label :email, 'E-mail', :class => "col-md-3 control-label" %>
              <div class="col-md-8">
                <%= f.email_field :email, :autofocus => true, class: 'form-control', :required => true %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :producer, 'Ciudad', :class => "col-md-3 control-label" %>
              <div class="col-md-8">
                <%= collection_select(:producer, :city_id, City.order("name asc").all, :id, :name, {:prompt => "-- seleccione --", :selected => @selected}, {class: "form-control"}) %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :password, 'Contraseña', :class => "col-md-3 control-label" %>
              <div class="col-md-8">
                <%= f.password_field :password, class: 'form-control ' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, 'Confirmar contraseña', :class => "col-md-3 control-label" %>
              <div class="col-md-8">
                <%= f.password_field :password_confirmation, class: 'form-control p_password' %>
              </div>
            </div>
            <div class="form-group">
              <div class="btn btn-primary cargarimg"> 
                <span> + Subir Foto </span>
                  <%= f.file_field :avatar, class:'file textupload'%>
              </div>        
              <div id="prev_imagenes">
                <div id="prev_producer_avatar">
                </div>
              </div>
            </div>
            <div class="form-group text-right" id="from-btn-registro">
              <%= f.submit 'Registrar', :class => 'btn btn-success' %>
            </div>
          </div>
          <% end -%>
      </div>
    </div>
  </div>
</div>